extends app

block card
  section(class=`flashcards`)
    .card(class=`card-${side}`)
      .card-header 
      #content 
        h2= text 
        if hint 
          p.hint 
            i= hint 
      .card-flip-wrap 
        a(href=`${id}?side=${sideToShow}`)
          img.card-flip(src=`/static/img/flip-alt.svg`)
      .card-next
        a(href='/card')
          img.next-alt(src="/static/img/next-alt.svg")
      script(src='/static/js/app.js')

